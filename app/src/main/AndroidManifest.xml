<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="im.brianoneill.chatmap">

    <!-- Camera manifest declarations -->
    <!-- permission not required for use of the camera via an intent, otherwise: -->
    <!--<uses-permission android:name="android.permission.CAMERA" />-->
    <uses-feature android:name="android.hardware.camera2" android:required="false"/>


    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controller.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.IdCreatorActivity" />
        <activity android:name=".controller.map_list.MapList" />
        <activity android:name=".controller.map_creation.MapCreatorActivity" />
        <activity android:name=".controller.map_creation.MapLocationActivity" />
        <activity android:name=".controller.map_creation.AddContactsActivity" />
        <activity android:name=".controller.map_creation.MapInvite" />
        <activity android:name=".controller.map_chat.MapChatActivity"></activity>
    </application>

</manifest>
